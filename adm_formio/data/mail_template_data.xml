<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="adm_application_mail_template_teacher_assessment" model="mail.template">
            <field name="name">Application: Teacher Assessment Letter</field>
            <field name="model_id" ref="adm.model_adm_application"/>
            <field name="subject">Teacher Assessment Letter</field>
            <field name="body_html" type="html">
                <div>
                    <p>
                        Dear Ma'am/Sir,<br/>
                        Good day.
                    </p>
                    <br/>
                    <p>
                        You were referred by a parent/guardian of a student who is applying to our school to fill up
                        the Teacher Assessment Letter in the link below. We thank you in advance for your time.
                    </p>
                    <p>
                        ${object.teacher_assessment_form_id.url.replace('/formio/form/', '/formio/public/form/')}
                    </p>
                </div>
            </field>
            <field name="email_from">${user.company_id.email | safe}</field>
            <field name="email_to">${object.teacher_assessment_email | safe}</field>
        </record>
    </data>
</odoo>