<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="adm.template_application_menu_upload_file_toddlesrs">
        <t t-call="website.layout">
            <t t-set="title">Application</t>
            <link rel="stylesheet" href="/adm/static/css/form_application.css"/>
            <div class="oe_struture"/>
            <div class="oe_struture">
                <style>
                    #nav-itm-todd a{
                    color: rgba(0, 0, 0, 0.9) !important;
                    }
                </style>
                <t t-call="adm.template_application_menu"/>
                <div class="container-fluid d-flex p-4">
                    <main class="col">
                        <section class="card mb-2">
                            <section class="card-header">
                                <i class="h1">Requirements For The Procedure Of Admission (Toddlers - Kinder)</i>
                            </section>
                            <section class="card-body&gt;">
                                <div class="container pb-3">
                                    <t t-if="application.status_id.type_id !='return' and application.status_id.type_id != 'started'">
                                        <div class="alert alert-warning mt-3" role="alert">
                                            La solicitud ya fue enviada.
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <div class="d-flex align-items-end">
                                            <form t-att-action="'/admission/applications/message/{}'.format(application_id)" method="post" enctype="multipart/form-data">
                                                <section class="d-flex col-12 mt-3 p-0">
                                                    <div class="col-12 text-left p-0">
                                                        <label for="file_upload">
                                                            <b>Birth certificate:</b>
                                                        </label>
                                                        <div>
                                                            <t t-if="cont_toddlesrs_birth_cert">
                                                                <span class="badge badge-success">&#10004;</span>
                                                                <a href="" t-att-value="cont_toddlesrs_birth_cert.id" class="downloadFile mr-2"><span class="badge badge-info btn">&#10151;</span></a>

                                                            </t>
                                                            <t t-else="">
                                                                <span class="badge badge-danger mr-2">&#10006;</span>
                                                            </t>
                                                            <input id="file_upload" type="file" name="file_upload"/>
                                                            <button class="btn btn-warning ml-2 d-none">Upload</button>
                                                        </div>
                                                    </div>
                                                    <input class="form-control d-none"  name="origin_filename" id="origin_filename" value="toddlesrs_birth_certificate"/>
                                                    <input class="form-control d-none"  name="origin" id="origin" value="toddlesrs"/>
                                                    <textarea class="form-control d-none" rows="4" cols="50" name="message_body" id="message_body"/>
                                                </section>
                                            </form>
                                            <button type="button" class="subButton btn btn-warning ml-2">Upload</button>
                                        </div>
                                        <hr/>
                                        <div class="d-flex align-items-end">
                                            <form t-att-action="'/admission/applications/message/{}'.format(application_id)" method="post" enctype="multipart/form-data">
                                                <section class="d-flex col-12 mt-3 p-0">
                                                    <div class="col-12 text-left p-0">
                                                        <label for="file_upload">
                                                            <b>Passport photo:</b>
                                                        </label>
                                                        <div>
                                                            <t t-if="cont_toddlesrs_passport_photo">
                                                                <span class="badge badge-success">&#10004;</span>
                                                                <a href="" t-att-value="cont_toddlesrs_passport_photo.id" class="downloadFile  mr-2"><span class="badge badge-info btn">&#10151;</span></a>

                                                            </t>
                                                            <t t-else="">
                                                                <span class="badge badge-danger mr-2">&#10006;</span>
                                                            </t>
                                                            <input id="file_upload" type="file" name="file_upload"/>
                                                            <button class="btn btn-warning ml-2  d-none">Upload</button>
                                                        </div>
                                                    </div>
                                                    <input class="form-control d-none"  name="origin_filename" id="origin_filename" value="toddlesrs_passport_photo"/>
                                                    <input class="form-control d-none"  name="origin" id="origin" value="toddlesrs"/>
                                                    <textarea class="form-control d-none" rows="4" cols="50" name="message_body" id="message_body"/>

                                                </section>
                                            </form>
                                            <button type="button" class="subButton btn btn-warning ml-2">Upload</button>
                                        </div>
                                        <hr/>
                                        <div class="d-flex align-items-end">
                                            <form t-att-action="'/admission/applications/message/{}'.format(application_id)" method="post" enctype="multipart/form-data">
                                                <section class="d-flex col-12 mt-3 p-0">
                                                    <div class="col-12 text-left p-0">
                                                        <label for="file_upload">
                                                            <b>Copy of medical shot records:</b>
                                                        </label>
                                                        <div>
                                                            <!-- <span class="badge badge-pill badge-secondary"><t t-esc="cont_toddlesrs_medical_record"/></span> -->
                                                            <t t-if="cont_toddlesrs_medical_record">
                                                                <span class="badge badge-success">&#10004;</span>
                                                                <a href="" t-att-value="cont_toddlesrs_medical_record.id" class="downloadFile  mr-2"><span class="badge badge-info btn">&#10151;</span></a>

                                                            </t>
                                                            <t t-else="">
                                                                <span class="badge badge-danger mr-2">&#10006;</span>
                                                            </t>
                                                            <input id="file_upload" type="file" name="file_upload"/>
                                                            <button class="btn btn-warning ml-2  d-none">Upload</button>
                                                        </div>
                                                    </div>
                                                    <input class="form-control d-none"  name="origin_filename" id="origin_filename" value="toddlesrs_medical_record"/>
                                                    <input class="form-control d-none"  name="origin" id="origin" value="toddlesrs"/>
                                                    <textarea class="form-control d-none" rows="4" cols="50" name="message_body" id="message_body"/>
                                                </section>
                                            </form>
                                            <button type="button" class="subButton btn btn-warning ml-2">Upload</button>
                                        </div>
                                        <hr/>
                                        <div class="d-flex align-items-end">
                                            <form t-att-action="'/admission/applications/message/{}'.format(application_id)" method="post" enctype="multipart/form-data">
                                                <section class="d-flex col-12 mt-3 p-0">
                                                    <div class="col-12 text-left p-0">
                                                        <label for="file_upload">
                                                            <b>Certification of “good health”:</b>
                                                        </label>
                                                        <div>
                                                            <!--<span class="badge badge-pill badge-secondary"><t t-esc="cont_toddlesrs_certificate_health"/></span>-->
                                                            <t t-if="cont_toddlesrs_certificate_health">
                                                                <span class="badge badge-success">&#10004;</span>
                                                                <a href="" t-att-value="cont_toddlesrs_certificate_health.id" class="downloadFile  mr-2"><span class="badge badge-info btn">&#10151;</span></a>

                                                            </t>
                                                            <t t-else="">
                                                                <span class="badge badge-danger mr-2">&#10006;</span>
                                                            </t>
                                                            <input id="file_upload" type="file" name="file_upload"/>
                                                            <button class="btn btn-warning ml-2  d-none">Upload</button>
                                                        </div>
                                                    </div>
                                                    <input class="form-control d-none"  name="origin_filename" id="origin_filename" value="toddlesrs_certificate_health"/>
                                                    <input class="form-control d-none"  name="origin" id="origin" value="toddlesrs"/>
                                                    <textarea class="form-control d-none" rows="4" cols="50" name="message_body" id="message_body"/>

                                                </section>
                                            </form>
                                            <button type="button" class="subButton btn btn-warning ml-2">Upload</button>
                                        </div>
                                        <hr/>
                                        <div class="d-flex align-items-end">
                                            <form t-att-action="'/admission/applications/message/{}'.format(application_id)" method="post" enctype="multipart/form-data">
                                                <section class="d-flex col-12 mt-3 p-0 ">
                                                    <div class="col-12 text-left p-0">
                                                        <label for="file_upload">
                                                            <b>Howard Evaluation:</b>
                                                        </label>
                                                        <div>
                                                            <!--<span class="badge badge-pill badge-secondary"><t t-esc="cont_toddlesrs_howard_eval"/></span>-->
                                                            <t t-if="cont_toddlesrs_howard_eval">
                                                                <span class="badge badge-success">&#10004;</span>
                                                                <a href="" t-att-value="cont_toddlesrs_howard_eval.id" class="downloadFile  mr-2"><span class="badge badge-info btn">&#10151;</span></a>

                                                            </t>
                                                            <t t-else="">
                                                                <span class="badge badge-danger mr-2">&#10006;</span>
                                                            </t>
                                                            <input id="file_upload" type="file" name="file_upload"/>
                                                            <button class="btn btn-warning ml-2  d-none">Upload</button>
                                                        </div>
                                                    </div>
                                                    <input class="form-control d-none"  name="origin_filename" id="origin_filename" value="toddlesrs_howard_eval"/>
                                                    <input class="form-control d-none"  name="origin" id="origin" value="toddlesrs"/>
                                                    <textarea class="form-control d-none" rows="4" cols="50" name="message_body" id="message_body"/>
                                                </section>
                                            </form>
                                            <button type="button" class="subButton btn btn-warning ml-2">Upload</button>
                                        </div>
                                    </t>
                                </div>
                            </section>
                        </section>
                        <script
                                src="https://code.jquery.com/jquery-3.5.1.slim.js"
                                integrity="sha256-DrT5NfxfbHvMHux31Lkhxg42LY6of8TaYyK50jnxRnM="
                                crossorigin="anonymous"></script>
                        <script src="/adm/static/js/upload.js"></script>
                    </main>
                </div>
            </div>
        </t>
    </template>
</odoo>