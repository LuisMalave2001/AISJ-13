<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="adm.template_application_schools_information_form">
        <section class="container-fluid">
            <div id="school_forms">
                <article class="row card card-body pt-0 mt-2">
                    <input class="form-control" type="hidden" name="previous_school_id"/>
                    <div class="row">
                        <section class="col-12 d-flex justify-content-end pt-2 pb-1 m-0">
                            <button type="button" class="btn btn-danger remove-school">&#10006;</button>
                        </section>
                    </div>
                    <div class="row">
                        <section class="col-12 col-md">
                            <label>Name of school</label>
                            <span class="text-danger"> *</span>
                            <div>
                                <input class="form-control" type="text" name="previous_school_name"/>
                            </div>
                        </section>

                        <section class="col-12 col-md">
                            <label>Grade Levels</label>
                            <input class="form-control" type="text" name="previous_school_street"/>
                        </section>

                        <section class="col-12 col-md">
                            <label>Address</label>
                            <input class="form-control" type="text" name="previous_school_street"/>
                        </section>
                    </div>
                    <div class="row">

                        <section class="col-12 col-md">
                            <label>
                                Start Date
                                <span class="text-danger"> *</span>
                            </label>
                            <input class="form-control" type="date" name="previous_school_todate"/>
                        </section>

                        <section class="col-12 col-md">
                            <label>
                                End Date
                                <span class="text-danger"> *</span>
                            </label>
                            <input class="form-control" type="date" name="previous_school_fromdate"/>
                        </section>

                    </div>
                    <div class="row">
                        <section class="col-12 col-md">
                            <label>
                                Reason for Leaving
                                <span class="text-danger"> *</span>
                            </label>
                            <input class="form-control" type="text" name="previous_school_gradecompleted"/>
                        </section>
                    </div>
                </article>

            </div>
        </section>
    </template>

    <template id="adm.template_application_schools_information_webpage">

        <t t-call="website.layout">
            <t t-set="head">
                <!--<link rel="stylesheet" href="/adm/static/css/form_application.css"/>-->
                <t t-call-assets="adm.assets_application_student_info" defer_load="True"/>
            </t>
            <t t-set="title">Schools</t>

            <div class="oe_struture"/>
            <div class="oe_struture">
                <t t-call="adm.template_application_menu"/>
                <div class="container-fluid mt-4">
                    <div class="row">
                        <!--<div class="col-3"></div>-->
                        <div class="col-12 col-md-9">
                            <section class="card mb-2">
                                <section class="card-header">
                                    <h1>Academic Information</h1>
                                </section>

                                <section class="card-body">
                                    <div class="container">

                                        <t t-call="adm.template_application_schools_information_form"/>

                                        <button type="button"
                                                class="add-school btn btn-secondary d-block mt-2 ml-auto">
                                            &#10010; Add school</button>
                                    </div>
                                </section>
                            </section>
                            <section class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 col-md-6 form-group">
                                            <label>Has your child <strong>applied</strong> to The American International School of Jeddah before?</label>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="attended_to_aisj_before"/>
                                                <label class="for-check-label">Yes</label>
                                            </div>

                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="attended_to_aisj_before"/>
                                                <label class="for-check-label">No</label>
                                            </div>
                                        </div>

                                        <div class="col-12 col-md-6 form-group">
                                            <label>Has your child <strong>attended</strong> The American International School of Jeddah Before?</label>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="applied_to_aisj_before"/>
                                                <label class="for-check-label">Yes</label>
                                            </div>

                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="applied_to_aisj_before"/>
                                                <label class="for-check-label">No</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>

                        <div class="col-12 col-md-3">
                            <section class="card card-sticky-save mb-3 mt-3">
                                <div class="card-body">
                                    <p> Fields with (*) are mandatory </p>
                                    <section
                                            class="d-flex flex-column align-items-center justify-content-center bg-white p-2 mb-4">
                                        <span class="text-muted mb-2">Please, make sure you save the changes</span>
                                        <button class="btn btn-primary" type="button">Save</button>
                                    </section>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </t>
        <!--        <script defer="defer" type="text/javascript" src="/adm/static/js/previous_school.js"/>-->
    </template>
</odoo>
