        <t t-if="application.status_id.type_id =='return' or application.status_id.type_id == 'started'">
            <form t-att-action="'/admission/applications/{}/check'.format(application_id)" method="post"
                  enctype="multipart/form-data" id="info-form">
                <button class="btn btn-primary btn-lg fixed-bottom ml-auto mr-2 mb-2" style="left: auto !important;">
                    Send to School &#10095;</button>
            </form>
            <t t-if="showPendingInformation">
                <div class="modal show modal_shown" tabindex="-1" role="dialog"
                     style="padding-right: 17px; display: block;" aria-modal="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Pending Task</h5>
                            </div>
                            <div class="modal-body">
                                <div class="alert alert-danger" role="alert">
                                    <ul>

                                        <t t-foreach="pendingData" t-as="itm">
                                            <li t-raw="itm"/>
                                        </t>
                                    </ul>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal"
                                        onclick="closeModal()">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                <script>
                    function closeModal(){
                    $(".modal").modal('show');
                    $(".modal").modal('hide');
                    }
                </script>
            </t>
