<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="adm.template_application_parent_questionnaire_form">
        <div></div>
    </template>

    <template id="adm.template_application_parent_questionnaire_webpage">

        <t t-call="adm.template_application_page_commons">
            <t t-set="title">Schools</t>

            <div class="oe_struture"/>
            <div class="oe_struture">
                <t t-call="adm.template_application_menu"/>
                <div class="container-fluid mt-4" data-adm-model-fields="1">

                    <div class="row">
                        <div class="col-12 col-md-9">
                            <t t-call="adm.template_application_parent_questionnaire_form"/>
                        </div>

                        <div class="col-12 col-md-3">
                            <section class="card card-sticky-save mb-3 mt-3">
                                <div class="card-body">
                                    <p> Fields with (*) are mandatory </p>
                                    <section
                                            class="d-flex flex-column align-items-center justify-content-center bg-white p-2 mb-4">
                                        <span class="text-muted mb-2">Please, make sure you save the changes</span>
                                        <button class="btn btn-primary js_submit_json"
                                                t-attf-data-next-url="/admission/applications/#{application_id.id}/additional-questions"
                                                type="button">Save and next</button>
                                    </section>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </t>

    </template>
</odoo>
