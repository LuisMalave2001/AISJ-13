<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="admission_application_kanban">
        <field name="name">Application Kanban</field>
        <field name="model">adm.application</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status_id" edit="false" class="o_kanban_small_column o_kanban_project_tasks"
                    disable_drag_drop_record="true" disable_sort_column="true">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_semantic_html_override oe_kanban_card">
                            <div t-attf-class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a role="button" class="dropdown-toogle o-no-caret btn" data-toggle="dropdown"
                                           data-display="static" href="#" aria-label="Dropdown menu"
                                           title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    <script></script>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="view_application_status_tree">
        <field name="name">Status Tree</field>
        <field name="model">adm.application.status</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id"/>
                <field name="name"/>
                <field name="sequence" widget="handle"/>
            </tree>
        </field>
    </record>

    <!--reporte base que muestra la información de la aplicacion común entre distintos colegios-->
    <report
            id="report_application_default"
            model="adm.application"
            string="Default Report"
            report_type="qweb-html"
            name="adm.report_default"
            file="adm.report_default"
            menu="False"

    />
    <!--reporte customizado que muestra la información de la aplicacion-->
    <report
            id="report_application_custom"
            model="adm.application"
            string="Custom Report"
            report_type="qweb-pdf"
            name="adm.report_custom"
            file="adm.report_custom"
            menu="False"
    />
    <!--reporte customizado para iae-pan, encargado de mostrar reporte interno donde administradores firmarán las aplicaciones-->
    <report
            id="report_internal_custom"
            model="adm.application"
            string="Internal Report"
            report_type="qweb-pdf"
            name="adm.report_internal"
            file="adm.report_internal"
            menu="False"
    />
    <!--  attachment_use="True"
      attachment="'Application_of_'+(object.name or '').replace('/','').replace(' ','_')+'.pdf'"-->


    <!--Form View for Application -->
    <record model="ir.ui.view" id="view_application_form">
        <field name="name">Application Form</field>
        <field name="model">adm.application</field>
        <field name="arch" type="xml">

            <form>
                <header>
                    <field name="status_type" attrs="{'invisible': 1}"/>
                    <button name="move_to_next_status" string="NEXT STATUS" type="object"
                            class="btn-primary oe_read_only" attrs="{'invisible': [('status_type', '!=', 'stage')]}"/>
                    <button name="cancel" string="CANCEL" type="object" class="btn-danger oe_read_only"
                            attrs="{'invisible': [('status_type', '=', 'cancelled')]}"/>

                    <button name="force_back" string="FORCE BACK STATUS" type="object"
                            class="btn-warning oe_read_only"/>
                    <button name="force_next" string="FORCE NEXT STATUS" type="object"
                            class="btn-warning oe_read_only"/>
                    <button class="btn btn-success text-light" name="print_custom" type="object" string="PRINT"/>
                    <button class="btn btn-success text-light" name="generate_internal_report" type="object"
                            string="GENERATE INTERNAL REPORT"/>

                    <field name="status_id" widget="statusbar" options="{'fold_field': 'fold'}"/>
                </header>
                <sheet>
                    <field name="image" String="" widget="image" class="oe_avatar"
                           options="{&quot;preview_image&quot;: &quot;image&quot;}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" force_save="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="preferred_degree_program"/>
                        <field name="partner_id"/>
                        <group colspan="1">

                            <field name="first_name"/>
                            <field name="middle_name"/>
                            <field name="last_name"/>
                            <field name="contact_time_id"/>
                            <field name="grade_level"/>
                            <field name="school_year"/>
                            <!--                            <field name="siblings"/>-->
                        </group>
                        <group colspan="1">
                            <field name="gender"/>
                            <field name="father_name"/>
                            <field name="mother_name"/>
                        </group>
                    </group>
                    <notebook id="application_notebook">
                        <page string="Tasks">
                            <field name="state_tasks" attrs="{'invisible': True}"/>
                            <field name="task_ids" widget="many2many_checkboxes" domain="[('id', 'in', state_tasks)]"/>
                        </page>

                        <!--                        <page name="student_info" string="Student info">-->
                        <!--                            <group>-->
                        <!--                                <field name=""-->
                        <!--                            </group> -->
                        <!--                        </page>-->
                        <page name="schools" string="Schools">
                            <field name="previous_school_ids"/>
                        </page>
                        <page name="family" string="Family">
                            <notebook>
                                <page name="parents" string="Parents/Guardian">
                                </page>
                                <page name="siblings" string="Sibling">
                                    <field name="sibling_ids"/>
                                </page>
                            </notebook>
                        </page>
                        <page name="health" string="Health">
                            <group>
                                <field name="doctor_name"/>
                                <field name="hospital"/>
                                <field name="doctor_name"/>
                            </group>
                            <notebook id="application_health">
                                <page name="conditions" string="Conditions">
                                    <field name="medical_conditions_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="comment"/>
                                        </tree>
                                    </field>
                                </page>
                                <page name="allergies" string="Allergies">
                                    <field name="medical_allergies_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="comment"/>
                                        </tree>
                                    </field>
                                </page>
                                <page name="medications" string="Medications">
                                    <field name="medical_medications_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="comment"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </page>
                        <page name="documents" string="Documents">

                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter" modifiers="{}">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>

            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_application_status_form">
        <field name="name">Application status Form</field>
        <field name="model">adm.application.status</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <group colspan="1">
                            <field name="fold"/>
                        </group>
                        <group colspan="1">
                            <field name="type_id" widget="radio"/>
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page string="Tasks">
                                <field name="task_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_application_sibling_tree">
        <field name="name">sibling Tree</field>
        <field name="model">adm.application.sibling</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="school"/>
            </tree>
        </field>
    </record>

</odoo>