    <record model="ir.ui.view" id="view_application_status_form">
        <field name="name">Application status Form</field>
        <field name="model">adm.application.status</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                    <group>
                        <group colspan="1">
                            <field name="fold" />
                        </group>
                        <group colspan="1">
                            <field name="type_id" widget="radio" />
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page string="Tasks">
                                <field name="task_ids">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="description" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_application_sibling_tree">
