                    <button name="cancel" string="CANCEL" type="object" class="btn-danger oe_read_only" attrs="{'invisible': [('status_type', '=', 'cancelled')]}" />

                    <button name="force_back" string="FORCE BACK STATUS" type="object" class="btn-warning oe_read_only" />
                    <button name="force_next" string="FORCE NEXT STATUS" type="object" class="btn-warning oe_read_only" />
                    <button class="btn btn-success text-light" name="print_custom" type="object" string="PRINT" />
                    <button class="btn btn-success text-light" name="generate_internal_report" type="object" string="GENERATE INTERNAL REPORT" />

                    <field name="status_id" widget="statusbar" options="{'fold_field': 'fold'}" />
