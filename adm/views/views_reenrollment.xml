    <!--Form View for Application -->
    <record model="ir.ui.view" id="view_application_reenrollment_form">
        <field name="name">Application Reenrollment Form</field>
        <field name="model">adm.reenrollment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status_type" attrs="{'invisible': 1}"/>
                    <button name="move_to_next_status" string="NEXT STATUS" type="object"
                            class="btn-primary oe_read_only" attrs="{'invisible': [('status_type', '!=', 'stage')]}"/>
                    <button name="cancel" string="CANCEL" type="object" class="btn-danger oe_read_only"
                            attrs="{'invisible': [('status_type', '=', 'cancelled')]}"/>

                    <button name="force_back" string="FORCE BACK STATUS" type="object"
                            class="btn-warning oe_read_only"/>
                    <button name="force_next" string="FORCE NEXT STATUS" type="object"
                            class="btn-warning oe_read_only"/>

                    <field name="status_id" widget="statusbar" options="{'fold_field': 'fold'}"/>
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="partner_id" force_save="1"
                                   domain="[('next_student_status','like', 'Enrolled')]"
                                   options="{'no_create': True, 'no_create_edit':True}"/>
                        </h1>
                        <group colspan="1">
                            <!--                            <field name="first_name" />-->
                            <!--                            <field name="middle_name" />-->
                            <!--                            <field name="last_name" />-->
                        </group>
                        <group colspan="1">

                        </group>
                    </group>
                    <notebook>
                        <page string="Tasks">

                        </page>


                    </notebook>
                </sheet>

                <div class="oe_chatter" modifiers="{}">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>

            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_application_reenrollment_status_form">
        <field name="name">Application Reenrollement status Form</field>
        <field name="model">adm.reenrollment.status</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <group colspan="1">
                            <field name="fold"/>
                        </group>
                        <group colspan="1">
                            <field name="type_id" widget="radio"/>
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page string="Tasks">
                                <field name="task_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>