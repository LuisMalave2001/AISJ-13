<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="admission_application_reenrollment_kanban">
        <field name="name">Application Reenrollment Kanban</field>
        <field name="model">adm.reenrollment</field>
        <field name="arch" type="xml">

            <kanban default_group_by="status_id" edit="false" class="o_kanban_small_column o_kanban_project_tasks"
                    disable_drag_drop_record="true" disable_sort_column="true">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_semantic_html_override oe_kanban_card">
                            <div t-attf-class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a role="button" class="dropdown-toogle o-no-caret btn" data-toggle="dropdown"
                                           data-display="static" href="#" aria-label="Dropdown menu"
                                           title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                    <script></script>
                </templates>
            </kanban>
        </field>
    </record>

